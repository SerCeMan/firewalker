{
  "compilerOptions": {
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "es2022",
      "webworker"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "removeComments": false,
    "sourceMap": true,
    "strict": true,
    "target": "es2022",
    "declaration": true,
    "outDir": "dist/",
    "newLine": "LF",
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/"
  ]
}
