{
  "compilerOptions": {
    "esModuleInterop": true,
    "lib": [
      "ESNext",
      "webworker"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "removeComments": false,
    "sourceMap": true,
    "strict": true,
    "target": "ES2019",
    "declaration": true,
    "outDir": "dist/",
    "newLine": "LF",
    "typeRoots": ["./types", "./node_modules/@types"],
    "skipLibCheck": true
  },
  "include": ["lib/**/*", "src/**/*", "types/**/*"],
  "exclude": ["node_modules", "dist"]
}
